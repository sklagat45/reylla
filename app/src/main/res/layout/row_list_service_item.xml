<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_border_shape_rounded"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <ImageView
        android:id="@+id/iv_item_service_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        tools:src="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:background="#00555555">

        <TextView
            android:id="@+id/tv_item_service_name"
            android:layout_width="122dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="18sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.041"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.106"
            tools:text="Service Name" />

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.041"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_service_name"
            card_view:layout_constraintVertical_bias="0.0"
            android:text="Duration: " />

        <TextView
            android:id="@+id/tv_item_duration"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginEnd="164dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.833"
            card_view:layout_constraintStart_toEndOf="@+id/tv_service_name"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_service_name"
            card_view:layout_constraintVertical_bias="0.208"
            tools:text="2hrs" />

        <TextView
            android:id="@+id/tv_ksh"
            android:layout_width="33dp"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.032"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_duration"
            card_view:layout_constraintVertical_bias="0.375"
            android:text="Ksh " />

        <TextView
            android:id="@+id/tv_item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginStart="2dp"
            android:inputType="number"
            android:hint="1200"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/tv_ksh"
            card_view:layout_constraintTop_toBottomOf="@+id/et_item_color" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_delete_24"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
